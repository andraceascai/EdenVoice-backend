<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="mongodbconnect.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="SendToNode">
          <match url="/*" />
          <action type="Rewrite" url="mongodbconnect.js"/>
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>